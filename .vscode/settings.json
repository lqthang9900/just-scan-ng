{
    "files.exclude": {
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.map": {
            "when": "$(basename).map"
        }
    },
    "search.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/platforms": true
    },
    "typescript.tsdk": "./node_modules/typescript/lib"
}